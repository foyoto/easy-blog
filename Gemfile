source 'http://rubygems.org'

gem 'rails', '3.1.0'

# Bundle edge Rails instead:
# gem 'rails',     :git => 'git://github.com/rails/rails.git'

gem 'mysql2'


# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails', "  ~> 3.1.0"
  gem 'coffee-rails', "~> 3.1.0"
  gem 'uglifier'
end

gem 'jquery-rails'

#Embed the V8 Javascript interpreter into Ruby.
#http://rubydoc.info/gems/therubyracer/0.9.8/frames
gem 'therubyracer', '>= 0.8.2'

#pagination component
#https://github.com/amatsuda/kaminari/issues/70#分页问题
gem 'kaminari', '0.12.4' #, :git => 'git://github.com/amatsuda/kaminari', :tag => 'v0.12.4'#, :ref => 'ca38024'

#meta_search
#https://github.com/ernie/meta_search
#http://perlove.blog.163.com/blog/static/1740511122011821103656232/
#meta_search extend 'form_for' method, object-based searching, providing methods to build up search conditions
gem 'meta_search', '1.1.1' #, :git => 'git://github.com/ernie/meta_search.git', :tag => 'v1.0.5'

#https://github.com/mbleigh/acts-as-taggable-on
gem 'acts-as-taggable-on', '~>2.0.6'

# Use unicorn as the web server
# gem 'unicorn'

# Deploy with Capistrano
# gem 'capistrano'

# To use debugger
# gem 'ruby-debug19', :require => 'ruby-debug'

group :test do
  # Pretty printed test output
